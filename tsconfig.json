{
  "compilerOptions": {
    "target": "es2019",
    "module": "es2015",
    "moduleResolution": "node",
    "lib": ["es2019", "dom"],
    "declaration": true,
    "declarationMap": true,
    "experimentalDecorators": true,
    "useDefineForClassFields": false,
    "esModuleInterop": true,
    "rootDir": "./src",
    "outDir": "./dist"
  },
  "exclude": ["src/tests/*.test.ts", "./dist/**.*"]
}

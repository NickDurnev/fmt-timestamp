{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "lib": ["ESNext", "dom"],
    "declaration": true,
    "declarationMap": true,
    "declarationDir": "dist/types",
    "experimentalDecorators": true,
    "useDefineForClassFields": false,
    "esModuleInterop": true,
    "rootDir": "./src",
    "outDir": "./dev"
  },
  "exclude": ["src/tests/*.test.ts", "./dist/**.*", "./dist/*"]
}
